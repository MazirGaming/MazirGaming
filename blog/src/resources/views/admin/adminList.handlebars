<div class="mt-4"></div>
<button>
  <a href="http://localhost:3000/admin/create">Thêm mới sản phẩm</a>
</button>
<div class="mt-4">
  <table class="table">
    <thead>
      <tr>
        <th scope="col">STT</th>
        <th scope="col">Tên sản phẩm</th>
        <th scope="col">Giá</th>
        <th scope="col">Thời gian tạo</th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
      {{#each gifts}}
      <tr>
        <th scope="row">{{sum @index 1}}</th>
        <td>{{this.name}}</td>
        <td>{{this.price}}</td>
        <td>{{this.createdAt}}</td>
        <td>
          <a href="/admin/{{this._id}}/edit" class="btn btn-link">Sửa</a>
          <a href="" class="btn btn-link" data-id="{{this._id}}" data-toggle="modal" data-target="#deleteItem">Xóa</a>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>


</div>



{{!-- Alert DELETE ITEM --}}
<div id="deleteItem" class="modal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Xóa vật phẩm</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p>Bạn có đồng ý xóa vật phẩm không?</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-danger btn-danger-delete">Xóa</button>
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Hủy</button>
      </div>
    </div>
  </div>
</div>

{{!-- DELETE FORM hiden --}}
<form name="form-Delete" method="POST"></form>

<script>
  addEventListener('DOMContentLoaded', function () {
    var btnDelete = document.querySelector('.btn-danger-delete');
    var formSubmit = document.forms['form-Delete'];
    var id;


    $('#deleteItem').on('show.bs.modal', function (event) {
      var button = $(event.relatedTarget);
      id = button.data('id');
    })

    btnDelete.onclick = function () {
      formSubmit.action = '/admin/' + id + '?_method=DELETE';
      formSubmit.submit();
    }

  })

</script>